<div class="container">
    <% if (message) { %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
            <strong><%= message.message %></strong>
        </div>
    <% } %>
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                            <th>Id</th>
                            <th>Image</th>
                            <th>name</th>
                            <th>E-Mail</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(users != ''){ %>
                            <% users.forEach((row,index) => {%>
                                <tr class="align-middle">
                                    <td><%=index+1 %></td>
                                    <td><img src="<%=row.image %>" alt="" width="50" class="img-thumbnail"></td>
                                    <td><%=row.name %></td>
                                    <td><%=row.email %></td>
                                    <td><%=row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row.id %>" class="text-warning">Edit</a>
                                        <a href="/delete/<%= row.id %>" class="text-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% }else{ %>
                            <td>No data found</td>
                        <% } %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    